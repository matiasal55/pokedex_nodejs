<div class="container">
    {{#each info}}
    <div class="row">
        <div class="imagen col-sm-12 col-md-6">
            <img src="{{imagen}}" alt={{nombre}} class="img-fluid">
        </div>
        <div class="informacion col-sm-12 col-md-6">
            <div class="titulo d-flex align-items-center">
                <img src="/images/{{tipo}}.png" style="width: 50px; height:50px" class="responsive">
                <h2 class="d-inline"> | {{nombre}}</h2>
            </div>
            <div class="texto">
                <p>{{descripcion}}</p>
            </div>
        </div>
    </div>
    {{/each}}
    <div class="d-block text-center">
        <a href="/">
            <h4>
                <<< Volver</h4>
        </a>
    </div>
</div>